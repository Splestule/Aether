#!/bin/bash

# Get the directory where the app bundle is located
APP_DIR="$( cd "$( dirname "$( dirname "$( dirname "$( dirname "${BASH_SOURCE[0]}" )" )" )" )" && pwd )"
cd "$APP_DIR" || exit 1

# Open Terminal and run the start.command script
osascript <<EOF
tell application "Terminal"
    activate
    do script "cd '$APP_DIR' && '$APP_DIR/start.command'"
end tell
EOF
